@model BestPlayer
@{
    Layout = null;
}
<h4>BestPlayer</h4>
<hr />
<div class="modal-content p-5">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body p-0">
        <form asp-action="Edit" asp-controller="BestPlayers" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TournamentId" class="control-label"></label>
                <select asp-for="TournamentId" class="form-control" asp-items="ViewBag.TournamentId"></select>
                <span asp-validation-for="TournamentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerTeamId" class="control-label"></label>
                <select asp-for="PlayerTeamId" class="form-control" asp-items="ViewBag.PlayerTeamId"></select>
                <span asp-validation-for="PlayerTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>