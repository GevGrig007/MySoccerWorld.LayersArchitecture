@model SeasonalAward;
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form asp-action="Create" asp-controller="Awards" method="post">
            <div class="form-group">
                <label asp-for="Season" class="control-label"></label>
                <select asp-for="SeasonId" class="form-control" asp-items="@ViewBag.Seasons"> </select>
            </div>
            <div class="form-group">
                <input type="hidden" name="AwardName" value="SeasonalPlayers" />
            </div>
            <div class="form-group">
                <label  class="control-label"> Player: </label>
                <select name="PlayerId" class="form-control" asp-items="ViewBag.Players">
                    <option selected="selected" disabled="disabled"> Select Player </option>
                </select>
            </div>
            <input type="submit" value="CREATE" />
        </form>
    </div>
</div>
