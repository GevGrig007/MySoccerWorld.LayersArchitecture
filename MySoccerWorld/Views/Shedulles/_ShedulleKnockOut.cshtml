                @for (int i = 0; i < 8; i++)
                {
                    <div class="form-group">
                        <select name="clubs[]" asp-items="@ViewBag.Teams">
                        </select>
                    </div>
                }
                <input type="text" inputmode="numeric" name="data" />
                <input type="submit" value="Create" />
            </form>
        </div>
    </div>
    <button class="btn btn-collapse" type="button" data-toggle="collapse" data-target="#shedulle2" aria-expanded="false" aria-controls="shedulle2">
        Shedulle for 1/2 finals
    </button>
    <div class="collapse" id="shedulle2">
        <div class="card card-body">
