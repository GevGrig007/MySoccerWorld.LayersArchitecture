@model Tournament
@{
    Layout = null;
}
<div class="container">
    <button class="btn btn-collapse" type="button" data-toggle="collapse" data-target="#shedulle8" aria-expanded="false" aria-controls="shedulle8">
        Shedulle for 1/8 finals
    </button>   
    <div class="collapse" id="shedulle8">
        <div class="card card-body">
            <form asp-action="ShedulleKnockOut8" asp-controller="Shedulles" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                @for (int i = 0; i < 16; i++)
                {
                    <div class="form-group">
                        <select name="clubs[]" asp-items="@ViewBag.Teams">
                        </select>
                    </div>
                }
                <input type="text" inputmode="numeric" name="data" />
                <input type="submit" value="Create" />
            </form>
        </div>
    </div>
    <button class="btn btn-collapse" type="button" data-toggle="collapse" data-target="#shedulle4" aria-expanded="false" aria-controls="shedulle4">
        Shedulle for 1/4 finals
    </button>
