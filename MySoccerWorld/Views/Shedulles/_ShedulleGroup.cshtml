@model Tournament
@{ 
    Layout = null;
}
<div class="container">
    <button class="btn btn-collapse" type="button" data-toggle="collapse" data-target="#shedullegroup" aria-expanded="false" aria-controls="shedullegroup">
        Shedulle for Group Stage
    </button>
    <div class="collapse" id="shedullegroup">
        <div class="card card-body">
            <form asp-action="ShedulleGroup" asp-controller="Shedulles" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                @for (int i = 0; i < Model.Teams.Count; i++)
                {
                    <div class="form-group">
                        <select name="clubs[]" asp-items="@ViewBag.Teams">
                        </select>
                    </div>
                }
                <input type="text" inputmode="numeric" name="data" />
                <input type="submit" value="Create" />
            </form>
        </div>
    </div>  
</div>
