@model Tournament
<div class="center m-5">
    <div class="container">
        <form action="ShedulleQualification" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div>
                <p class="text-white">  Round :   <input type="text" name="round" />  </p>
                <p class="text-white">  Select count of matches :
                    <select name="matchcount">
                        <option value="1"> 1 Match</option>
                        <option value="2"> 2 Match</option>
                    </select>
                </p>
                <p class="text-white"> Enter a data
                    <input type="text" inputmode="numberic" name="data" />
                </p>
                <p class="text-white"> Choose neytral or no
                    <select name="neytral">
                        <option value="True"> Neytral Stadium </option>
                        <option value="False"> Home Stadium </option>
                    </select>
                </p>
            </div>
            <div class="row">
                @for (int i = 0; i < ViewBag.TeamsCount; i++)
                {
                    var c = i + 1;
                    <div class="form-group col-6">
                        <span class="text-white"> @c : </span>
                        <select name="clubs[]" asp-items="@ViewBag.Teams">
                             <option selected="selected" disabled="disabled">  Select TEAM </option>
                        </select>
                    </div>
                }
            </div>
            <input type="submit" value="send" />
        </form>
    </div>   
</div>
