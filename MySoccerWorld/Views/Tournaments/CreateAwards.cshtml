@model TournamentAward
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form asp-action="CreateAwards" method="post">
            <div class="form-group">
                <input type="hidden" name="TournamentId" value="@ViewBag.Tournament.Id" />
            </div>
            <div class="form-group">
                <label asp-for="AwardName" class="control-label"></label>
                <select asp-for="AwardName" class="form-control" asp-items="Html.GetEnumSelectList<AwardType>()"> </select>
            </div>
            <div class="form-group">
                <label asp-for="PlayerTeam" class="control-label"></label>
                <select asp-for="PlayerTeamId" class="form-control" asp-items="ViewBag.Players">
                    <option selected="selected" disabled="disabled"> Select Player </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CoachTeam" class="control-label"></label>
                <select asp-for="CoachTeamId" class="form-control" asp-items="ViewBag.Coaches">
                    <option selected="selected" disabled="disabled"> Select Coach </option>
                </select>
            </div>
            <input type="submit" value="CREATE" />
        </form>
    </div>
</div>