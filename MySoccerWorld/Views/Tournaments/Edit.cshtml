@model Tournament
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <form asp-action="Edit" method="post" style="display:grid;padding:5%;">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Division" class="control-label"></label>
                <input asp-for="Division" class="form-control" />
                <span asp-validation-for="Division" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeasonId" class="control-label"></label>
                <select asp-for="SeasonId" class="form-control" asp-items="ViewBag.Seasons"></select>
            </div>
            <div class="form-group">
                <label asp-for="TournamentType" class="control-label"></label>
                <select asp-for="TournamentType" class="form-control" asp-items="Html.GetEnumSelectList<TournamentType>()">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BestPlayerFormation" class="control-label"></label>
                <select asp-for="BestPlayerFormation" class="form-control" asp-items="Html.GetEnumSelectList<BestPlayerFormation>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="LeagueId" class="control-label"></label>
                <select asp-for="LeagueId" class="form-control" asp-items="ViewBag.Leagues"></select>
            </div>
            <button class="btn-primary" type="submit">
                SAVE CHANGES
            </button>
        </form>
    </div>
</div>