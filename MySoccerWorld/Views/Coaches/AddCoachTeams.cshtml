@model CoachTeam
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <h2>Create</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddCoachTeams" method="post">
                    <div class="form-group">
                        <input type="hidden" name="CoachId" value="@ViewBag.CoachId.Id" />
                    </div>
                    <div class="form-group">
                        <input type="text" value="@ViewBag.CoachId.Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Team" class="control-label"></label>
                        <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Season" class="control-label"></label>
                        <select asp-for="SeasonId" class="form-control" asp-items="ViewBag.SeasonId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>