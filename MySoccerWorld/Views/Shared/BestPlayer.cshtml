@model Tournament
<div class="center">
    <form asp-action="EditBP" asp-controller="Tournaments" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <select name="bp" asp-items="Html.GetEnumSelectList<BestPlayerFormation>()">
            <option selected="selected" disabled="disabled"> @Model.BestPlayerFormation </option>
