@model National
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <h4>Player</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateClub">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Flag" class="control-label"></label>
                        <input asp-for="Flag" class="form-control" />
                        <span asp-validation-for="Flag" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Region" class="control-label"></label>
                        <select asp-for="Region" class="form-control">
                            <option> UEFA </option>
                            <option> CONCACAF </option>
                            <option> CONMEBOL </option>
                            <option> AFC </option>
                            <option> CAF </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>