@model Match
@{
    Layout = null;
}
<div class="modal-content p-4">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body p-0">
        <form asp-action="Edit" asp-controller="Matches" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Round" class="control-label"></label>
                <input asp-for="Round" class="form-control" />
                <span asp-validation-for="Round" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Neytral" /> @Html.DisplayNameFor(model => model.Neytral)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select asp-for="HomeTeam" class="form-control" asp-items="ViewBag.HomeTeam"></select>
                <span asp-validation-for="HomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <select asp-for="AwayTeam" class="form-control" asp-items="ViewBag.AwayTeam"></select>
                <span asp-validation-for="AwayTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeEx" class="control-label"></label>
                <input asp-for="HomeEx" class="form-control" />
                <span asp-validation-for="HomeEx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayEx" class="control-label"></label>
                <input asp-for="AwayEx" class="form-control" />
                <span asp-validation-for="AwayEx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomePen" class="control-label"></label>
                <input asp-for="HomePen" class="form-control" />
                <span asp-validation-for="HomePen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayPen" class="control-label"></label>
                <input asp-for="AwayPen" class="form-control" />
                <span asp-validation-for="AwayPen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TournamentId" class="control-label"></label>
                <select asp-for="TournamentId" class="form-control" asp-items="ViewBag.TournamentId"></select>
                <span asp-validation-for="TournamentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>